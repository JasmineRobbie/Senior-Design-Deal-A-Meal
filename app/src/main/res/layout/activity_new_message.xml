<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teamcarl.prototype.com.NeuralNet.prototype.NewMessage"
    android:background="@drawable/aim_memo_send">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout3"
        android:layout_alignRight="@+id/priority"
        android:layout_alignEnd="@+id/priority"
        android:orientation="horizontal"
        android:layout_above="@+id/priority">

        <EditText
            android:id="@+id/tbBody"
            android:layout_width="317dp"
            android:layout_height="161dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/userSpinner"
            android:layout_marginTop="93dp"
            android:layout_marginEnd="38dp"
            android:ems="10"
            android:hint="Body of message"
            android:inputType="textMultiLine"
            android:maxLength="8000"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical"
            android:singleLine="true"
            android:textAlignment="viewStart"
            tools:scrollbars="vertical" />

        <EditText
            android:id="@+id/tbSubject"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="510dp"
            android:layout_marginEnd="-7dp"
            android:layout_marginRight="-7dp"
            android:layout_marginBottom="40dp"
            android:maxLength="254"
            android:maxLines="1"
            android:text="Subject" />

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="177dp"
            android:layout_height="29dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_marginLeft="187dp"
            android:layout_marginTop="6dp"
            android:alpha="0"
            android:background="@drawable/sendresponse"
            android:src="@drawable/sendmessage"
            android:text="Send" />

        <Spinner
            android:id="@+id/userSpinner"
            android:layout_width="185dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_below="@+id/btnSend"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="7dp" />


    </RelativeLayout>

    <Spinner
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:id="@+id/priority"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="bottom"
        android:layout_columnSpan="2"
        android:nestedScrollingEnabled="false"
        android:touchscreenBlocksFocus="false"
        android:background="@android:drawable/btn_dropdown"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

</RelativeLayout>
