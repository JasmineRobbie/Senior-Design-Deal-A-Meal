<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.NeuralNet.AzureCloud.HistoryLog">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/historyLogTextview"
        android:layout_width="198dp"
        android:layout_height="64dp"
        android:text="History Log"
        android:textSize="36sp"
        />

    <ListView
        android:id="@+id/historyLogListview"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_below="@id/historyLogTextview">

    </ListView>

    <TextView
        android:id="@+id/totalCaloriesTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/historyLogListview"
        android:textSize="36sp"
        android:text="Total Calories: 0"
        >

    </TextView>

</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>