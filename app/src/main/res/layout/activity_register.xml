<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="wrap_content"
    android:layout_height="750dp"
    android:background="@drawable/aim_register"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.teamcarl.prototype.com.NeuralNet.prototype.Register">

    <RelativeLayout
        android:id="@+id/MarginContainer"
        android:layout_width="284dp"
        android:layout_height="750dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp">

        <EditText
            android:id="@+id/brandEdit"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_below="@+id/brandNumber"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="134dp"
            android:ems="10"
            android:hint="  Enter Brand Number"
            android:textColor="#000000"
            android:background="@color/white" />

        <EditText
            android:id="@+id/passwordEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_below="@id/brandEdit"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="188dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="@color/white"
            android:ems="10"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:hint="Enter Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/confirmPass"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="234dp"
            android:background="@color/white"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Confirm Password"
            android:inputType="textPassword" />

        <ImageButton
            android:id="@+id/RegisterButton"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150px"
            android:alpha="0"
            android:background="@drawable/register"
            android:text="Register" />
    </RelativeLayout>


</RelativeLayout>
