<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teamcarl.prototype.com.NeuralNet.prototype.FinalEvaluation"
    android:background="@drawable/aim_eval_referral">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="309dp"
            android:layout_height="256dp"
            android:id="@+id/referralText"
            android:layout_row="1"
            android:layout_column="0"
            android:backgroundTint="@color/abc_background_cache_hint_selector_material_light"
            android:backgroundTintMode="add"
            android:textColor="#000000"
            android:paddingLeft="5dp" />
    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Group code/name"
            android:id="@+id/brandName"
            android:singleLine="false"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="top" />

        <ImageView
            android:layout_width="167dp"
            android:layout_height="195dp"
            android:id="@+id/imageView2"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_rowSpan="3"
            android:src="@drawable/einstein"
            android:layout_marginBottom="20dp" />

        <ImageButton
            android:layout_width="167dp"
            android:layout_height="29dp"
            android:id="@+id/sendresponse"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/sendresponse"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:alpha="0" />

        <ImageButton
            android:layout_width="169dp"
            android:layout_height="89dp"
            android:id="@+id/urllink"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/urllink"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:alpha="0" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Menu"
            android:id="@+id/mainMenu"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/brandName"
            android:layout_alignEnd="@+id/brandName"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@drawable/guideselect"
            android:layout_marginLeft="10dp"
            android:alpha="0" />

    </GridLayout>

</RelativeLayout>
