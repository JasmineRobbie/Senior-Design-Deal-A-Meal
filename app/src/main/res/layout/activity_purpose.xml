<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teamcarl.prototype.com.NeuralNet.prototype.Purpose"
    android:background="@drawable/wood">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridLayout4"
        android:rowCount="8"
        android:columnCount="2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:id="@+id/brandName"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/questionsButton"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/questions"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/evaluateButton"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/evaluate"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newguideButton"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@drawable/new_guide"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:text="Purpose text"
            android:id="@+id/purposeText"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="175dp"
            android:id="@+id/imageView"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/schrodinger"
            android:layout_rowSpan="4" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendmessageButton"
            android:layout_row="6"
            android:layout_column="0"
            android:background="@drawable/sendmessage"
            android:layout_above="@+id/gridLayout4"
            android:layout_centerHorizontal="true"
            android:layout_rowSpan="1"
            android:layout_columnSpan="2"
            android:layout_gravity="center" />
    </GridLayout>

</RelativeLayout>
